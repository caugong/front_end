<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/info_detail_all_smoking_room_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/whole_detail_smoking_arrow_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/arrow"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/info_detail_all_smoking_room_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/smoking_room" />

        <TextView
            android:id="@+id/info_detail_all_smoking_room_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:lineSpacingExtra="8sp"
            android:text="Table information" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/whole_detail_smoking_room_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/whole_detail_smoking_room_inout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/smoking_room_loc" />

        <RadioGroup
            android:id="@+id/whole_detail_smoking_room_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <!-- 있어요 -->
            <RadioButton
                android:id="@+id/whole_detail_smoking_room_in_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/smoking_room_in" />

            <!-- 없어요 -->
            <RadioButton
                android:id="@+id/whole_detail_smoking_room_out_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/smoking_room_out" />
        </RadioGroup>
    </LinearLayout>

    <!--anti_corona-->
    <LinearLayout
        android:id="@+id/info_detail_all_anti_corona_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/whole_detail_anti_arrow_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/arrow"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/info_detail_all_anti_corona_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/virus" />

        <TextView
            android:id="@+id/info_detail_all_anti_corona_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:lineSpacingExtra="8sp"
            android:text="Table information" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/whole_detail_anti_corona_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/whole_detail_anti_corona_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:text="@string/date" />

        <EditText
            android:id="@+id/whole_detail_anti_corona_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="16"
            android:hint="@string/anti_corona_example"
            android:inputType="text" />

    </LinearLayout>

    <!--discount-->
    <LinearLayout
        android:id="@+id/info_detail_all_discount_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/whole_detail_discount_arrow_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/arrow"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/info_detail_all_discount_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/discount" />

        <TextView
            android:id="@+id/info_detail_all_discount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:lineSpacingExtra="8sp"
            android:text="Table information" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/whole_detail_discount_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/whole_detail_discount_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:text="@string/discount" />

        <EditText
            android:id="@+id/whole_detail_discount_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true">

        <!--cafe_clean-->

        <ImageView
            android:id="@+id/info_detail_all_cafe_clean_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/clean" />

        <TextView
            android:id="@+id/info_detail_all_cafe_clean_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:lineSpacingExtra="8sp"
            android:text="Table information"
            app:layout_constraintBottom_toBottomOf="@id/info_detail_all_cafe_clean_image"
            app:layout_constraintStart_toEndOf="@+id/info_detail_all_cafe_clean_image"
            app:layout_constraintTop_toTopOf="@id/info_detail_all_cafe_clean_image" />

        <!--noise-->
        <ImageView
            android:id="@+id/info_detail_all_noise_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_detail_all_cafe_clean_image"
            app:srcCompat="@drawable/noise" />

        <TextView
            android:id="@+id/info_detail_all_noise_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="8sp"
            android:text="Table information"
            app:layout_constraintBottom_toBottomOf="@+id/info_detail_all_noise_image"
            app:layout_constraintStart_toEndOf="@+id/info_detail_all_noise_image"
            app:layout_constraintTop_toTopOf="@+id/info_detail_all_noise_image" />

        <!--study_well-->
        <ImageView
            android:id="@+id/info_detail_all_study_well_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info_detail_all_noise_image"
            app:srcCompat="@drawable/study" />

        <TextView
            android:id="@+id/info_detail_all_study_well_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:lineSpacingExtra="8sp"
            android:text="Table information"
            app:layout_constraintBottom_toBottomOf="@id/info_detail_all_study_well_image"
            app:layout_constraintStart_toEndOf="@id/info_detail_all_study_well_image"
            app:layout_constraintTop_toTopOf="@id/info_detail_all_study_well_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>