<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="sign_in_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/title_default_margin</item>
        <item name="android:padding">@dimen/title_default_padding</item>
        <item name="android:fontFamily">@font/basic</item>
        <item name="android:textSize">@dimen/title_default_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="sign_in_edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/edit_margin</item>
        <item name="android:layout_marginEnd">@dimen/edit_margin</item>
        <item name="android:padding">@dimen/edit_padding</item>
        <item name="android:fontFamily">@font/basic</item>
        <item name="android:textSize">@dimen/edit_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="sign_up_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/button_marginStart</item>
        <item name="android:layout_marginEnd">@dimen/button_marginEnd</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:fontFamily">@font/basic</item>
    </style>

</resources>